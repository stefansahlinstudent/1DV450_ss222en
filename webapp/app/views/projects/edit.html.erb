<div class = "container">
	<div class = "Title">
		<h1>The edit page</h1>
	</div>
	<% if flash[:notice] %>
		<h2 class="error"><%= flash[:notice] %></h2>
		<%= link_to "Back to log in page! ", first_logout_path %>		
	<% else %>

	<%= form_for @project do |f| %>
		<div class="text_field">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div class="text_area">
			<%= f.label :description %>
			<%= f.text_field :description %>
		</div>
		
		<!-- Should be a select box here where you can chose the minigoal_id -->
		<div class="submit">
			<%= f.submit "Save changes" %>
		</div>		
	<% end %>
	
	<%= link_to "Back to projects", projects_path(@project) %>
	<%= form_tag(first_logout_path :method => "post", :action => "logout", :class => "myLogout") do%>
		<%= submit_tag("Logout") %>
	<% end %>
	<% end %>
	<div class="footer">
		<p>@steffo 2013<p>
	</div>
</div>